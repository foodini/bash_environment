#!/bin/bash

#http://en.wikipedia.org/wiki/ANSI_escape_code


#The fully-escaped stuff:
export ESC_BLACK='\\[\\033[30m\\]'
export ESC_RED='\\[\\033[31m\\]'
export ESC_GREEN='\\[\\033[32m\\]'
export ESC_BROWN='\\[\\033[33m\\]'
export ESC_BLUE='\\[\\033[34m\\]'
export ESC_PURPLE='\\[\\033[35m\\]'
export ESC_CYAN='\\[\\033[36m\\]'
export ESC_WHITE='\\[\\033[37m\\]'
export ESC_UNDER='\\[\\033[4m\\]'
export ESC_UNDER_OFF='\\[\\033[24m\\]'
export ESC_BOLD='\\[\\033[1m\\]'
export ESC_BOLD_OFF='\\[\\033[21m\\]' # NOT WIDELY SUPPORTED
export ESC_DARK='\\[\\033[2m\\]'
export ESC_DARK_OFF='\\[\\033[22m\\]'
export ESC_INVERT='\\[\\033[7m\\]'
export ESC_INVERT_OFF='\\[\\033[27m\\]'
export ESC_RESET='\\[\\033[0m\\]'

#PS1 uses the extra \[ and \] to recognize sequences of characters that should
#be ignored in computing the width of the prompt. If you're using escape
#sequences in a prompt, you'll need to use these versions.
export PC_BLACK='\[\033[30m\]'
export PC_RED='\[\033[31m\]'
export PC_GREEN='\[\033[32m\]'
export PC_BROWN='\[\033[33m\]'
export PC_BLUE='\[\033[34m\]'
export PC_PURPLE='\[\033[35m\]'
export PC_CYAN='\[\033[36m\]'
export PC_WHITE='\[\033[37m\]'
export PC_UNDER='\[\033[4m\]'
export PC_UNDER_OFF='\[\033[24m\]'
export PC_BOLD='\[\033[1m\]'
export PC_BOLD_OFF='\[\033[21m\]' # NOT WIDELY SUPPORTED
export PC_DARK='\[\033[2m\]'
export PC_DARK_OFF='\[\033[22m\]'
export PC_INVERT='\[\033[7m\]'
export PC_INVERT_OFF='\[\033[27m\]'
export PC_RESET='\[\033[0m\]'

#and.... bare: (For use on the command line with echo -e, for example)
export COL_BLACK='\033[30m'
export COL_RED='\033[31m'
export COL_GREEN='\033[32m'
export COL_BROWN='\033[33m'
export COL_BLUE='\033[34m'
export COL_PURPLE='\033[35m'
export COL_CYAN='\033[36m'
export COL_WHITE='\033[37m'
export COL_UNDER='\033[4m'
export COL_UNDER_OFF='\033[24m'
export COL_BOLD='\033[1m'
export COL_BOLD_OFF='\033[21m' # NOT WIDELY SUPPORTED
export COL_DARK='\033[2m'
export COL_DARK_OFF='\033[22m'
export COL_INVERT='\033[7m'
export COL_INVERT_OFF='\033[27m'
export COL_RESET='\033[0m'

if [ "$1" == "-v" ] || [ "$1" == "-?" ]; then
  echo -e  "$COL_RESET COL_RESET $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e  "$COL_BLACK COL_BLACK $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_BLACK$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e    "$COL_RED COL_RED   $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_RED$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e  "$COL_GREEN COL_GREEN $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_GREEN$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e  "$COL_BROWN COL_BROWN $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_BROWN$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e   "$COL_BLUE COL_BLUE  $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_BLUE$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e "$COL_PURPLE COL_PURPLE$COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_PURPLE$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e   "$COL_CYAN COL_CYAN  $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_CYAN$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"
  echo -e  "$COL_WHITE COL_WHITE $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_WHITE$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF"

  echo -e  "$COL_INVERT$COL_RESET COL_RESET $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e  "$COL_INVERT$COL_BLACK COL_BLACK $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_BLACK$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e    "$COL_INVERT$COL_RED COL_RED   $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_RED$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e  "$COL_INVERT$COL_GREEN COL_GREEN $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_GREEN$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e  "$COL_INVERT$COL_BROWN COL_BROWN $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_BROWN$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e   "$COL_INVERT$COL_BLUE COL_BLUE  $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_BLUE$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e "$COL_INVERT$COL_PURPLE COL_PURPLE$COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_PURPLE$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e   "$COL_INVERT$COL_CYAN COL_CYAN  $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_CYAN$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
  echo -e  "$COL_INVERT$COL_WHITE COL_WHITE $COL_BOLD COL_BOLD $COL_DARK COL_BOLD&&COL_DARK $COL_RESET$COL_WHITE$COL_DARK COL_DARK $COL_DARK_OFF ${COL_UNDER}COL_UNDER$COL_UNDER_OFF$COL_INVERT_OFF"
fi
