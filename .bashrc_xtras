start_timer() {
  CMD=`history | tail -1 | tr -s " " | cut -f3-1000 -d" "`
  date_time=`date`
  if [ ! -e "$LOGFILE" ]; then
    echo $date_time:$$:$PWD:$CMD >> ~/full_bash_history
    echo "$PROMPT_BNW $CMD" > $LOGFILE
  fi
}

stop_timer() {
  if [ -e "$LOGFILE" ]; then
    rm -f $LOGFILE
  fi
}

gen_prompt_text() {
    # !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
    # DON'T PUT ANYTHING BEFORE THE CAPTURE OF LAST_RETURN_VAL!!!!
    # !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
    LAST_RETURN_VAL="$?"

    history -a

    export GIT_BRANCH=`$GIT_BINARY_LOCATION branch 2>&1 | grep '^\*' | cut -c3- | sed -e "s/HEAD detached at //"`

    gen_prompt_text.py T $LAST_RETURN_VAL BROWN RED

    source ~/tmp/prompt_$$.sh
    #rm ~/tmp/prompt_$$.sh

    if [ $SUPPORTS_STATUS_LINE == "true" ]; then
        ITERM2_PROMPT_MARK_TYPE=`type -t iterm2_prompt_mark`
        if [ "$ITERM2_PROMPT_MARK_TYPE" == "function" ]; then
            #Add the info that iTerm2 Shell Integration needs for mark navigation. (You can always
            #add one, manually, with shift-cmd-m) Navigate w/ shift-cmd-arrows
            export PS1="\[\033]0;$PROMPT_BNW\a\]\[$(iterm2_prompt_mark)\]$PROMPT_COL"
        else
            export PS1="\[\033]0;$PROMPT_BNW\a\]$PROMPT_COL"
        fi
    else
        export PS1=$PROMPT_COL
    fi

    #set_term_bgcolor_for_state $BASE
    stop_timer
}

