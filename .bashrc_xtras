shing() {
    (
        declare -i counter

        counter=0
        while true; do
            (
                #I need to pass on "Could not resolve hostname", etc. Essentially, any time I get
                #an error return, that should be displayed to the user.
                rtt=`(time (ssh "$@" echo >> /dev/null)) 2>&1 | grep -v 'ost is down' | grep real | cut -c6-`
                echo $counter: $rtt
            ) &
            counter=$counter+1
            sleep 1
        done
    )
}

